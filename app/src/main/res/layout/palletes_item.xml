<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:elevation="2dp">

    <ImageView
        android:id="@+id/pi_palletSrc"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/ic_pallete_gray" />

    <RelativeLayout
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_centerInParent="true"
        android:background="@drawable/pallete_no"
        android:elevation="1dp">

        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/pi_palletNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/silverLight"
            android:textSize="20sp"/>

        <ImageView
            android:visibility="gone"
            android:id="@+id/pi_palletDone"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_accept"
            android:tint="@color/silverLight"/>
    </RelativeLayout>

</RelativeLayout>