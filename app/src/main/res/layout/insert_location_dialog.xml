<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    android:background="@drawable/background_dialog"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/tpd_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="WprowadÅº lokalizacje"
                android:textColor="@color/primaryDark"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/ild_cancel"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_remove"
                android:tint="@color/primaryDark" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <EditText
                android:id="@+id/ild_location"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@drawable/edit_background"
                android:paddingStart="23dp"
                android:paddingEnd="23dp"
                android:inputType="numberDecimal"
                android:fontFamily="sans-serif-light"
                android:hint="Lokalizacja"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ild_accept"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@drawable/button_dialog"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/accept"
                android:textColor="@color/silverLight"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>





</android.support.constraint.ConstraintLayout>